{
  "name": "subtext",
  "displayName": "SubText",
  "description": "A communication helper that guides commits, READMEs, and PRs to prevent sloppy vibe coding",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "vscode.git-scm",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "subtext.init",
        "title": "SubText: Initialize Config",
        "category": "SubText"
      },
      {
        "command": "subtext.generateCommit",
        "title": "SubText: Generate Commit Message",
        "icon": "$(sparkle)"
      },
      {
        "command": "subtext.generateReadme",
        "title": "SubText: Generate README",
        "icon": "$(book)"
      },
      {
        "command": "subtext.applyReadme",
        "title": "SubText: Apply Draft to README.md",
        "icon": "$(check)",
        "enablement": "subtext.isDrafting"
      },
      {
        "command": "subtext.showMenu",
        "title": "SubText: Show SubText Actions",
        "icon": "$(telescope)"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "subtext.generateCommit",
          "group": "navigation",
          "when": "scmProvider == git"
        }
      ],
      "editor/title": [
        {
          "command": "subtext.generateReadme",
          "group": "navigation",
          "when": "resourceLangId == markdown && !subtext.isDrafting"
        },
        {
          "command": "subtext.applyReadme",
          "group": "navigation",
          "when": "resourceScheme == untitled && subtext.isDrafting"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/assert": "^1.5.11",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.19.7",
    "@types/vscode": "^1.108.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "dependencies": {
    "firebase": "^12.8.0",
    "octokit": "^5.0.5",
    "simple-git": "^3.30.0"
  }
}
